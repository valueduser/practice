---
const { workout, activity } = Astro.props
// TODO: show minutes to complete, equipment, tags, etc
if (!workout || !activity) {
  throw new Error("Missing required props: workout or activity");
}
---

<li>
  <a href={`/workout/${workout.id}/activity/${activity.activityId}`} aria-label={`View details for ${activity.activityName}`}>
    {activity.activityName}
  </a>
</li>
