---
interface Props {
  href: string;
  direction: 'back' | 'next';
}

const { href, direction } = Astro.props;
---

<a
  href={href}
  class="inline-flex items-center justify-center p-2 rounded-lg hover:bg-gray-800 text-white transition-colors"
  aria-label={direction === 'back' ? 'Go back' : 'Go to next'}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="w-6 h-6"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    {
      direction === 'back' ? (
        <>
          <path d="M19 12H5" />
          <path d="M12 19l-7-7 7-7" />
        </>
      ) : (
        <>
          <path d="M5 12h14" />
          <path d="M12 5l7 7-7 7" />
        </>
      )
    }
  </svg>
</a>
